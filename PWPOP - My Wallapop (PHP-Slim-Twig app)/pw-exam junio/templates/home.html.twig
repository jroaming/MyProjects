        </form>
        <form action="/login">
            <input type="submit" value="Login" />
        </form>
        -->
        <a href = "{{ base_url() }}/login"> Login </a>
        <a href = "{{ base_url() }}/register"> Register </a>

    {% endif %}
{% endblock %}