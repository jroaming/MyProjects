{% extends 'base.html.twig' %}
{% set i = 1 %}
{% block content %}
    <form
            id = "userform"
            enctype="multipart/form-data"
            method="POST">
        <label>
            Name
            <input type="text" name="name">
        </label>
        <label>
            Price
            <input type="number" name="price">
        </label>
        <label>
            Schedule
            <input type="datetime-local" name="date">
        </label>
        <input type="submit" value="Upload">

    </form>
    <label>
        Description
        <textarea name="description" form="userform"></textarea>
    </label>

    {% if errors|length > 0 %}
        <p>Errores encontrados!</p>
        {% for e in errors %}
            <li>{{ e }}</li>
        {% endfor %}
    {% endif %}
{% endblock %}

{% block navbar %}
{% endblock %}